<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_surface"
    tools:context=".AddQuoteActivity">

    <TextView
        android:id="@+id/tvAddTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/trajanpro_regular"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:paddingEnd="24dp"
        android:text="QUOTES"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@+id/btnDiscard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDiscard"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="discard"
        android:textAllCaps="false"
        android:textColor="@color/accent_pink"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintBaseline_toBaselineOf="@id/tvAddTitle"
        app:layout_constraintEnd_toStartOf="@+id/btnSave"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/tvAddTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:textAllCaps="false"
        android:textColor="@color/tab_capsule"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintBaseline_toBaselineOf="@id/btnDiscard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnDiscard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:paddingEnd="24dp"
        android:paddingStart="8dp" />

    <ScrollView
        android:id="@+id/formScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilQuote"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Quote"
                app:boxStrokeColor="@color/tab_capsule"
                app:hintTextColor="@color/hint_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etQuote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textCapSentences|textMultiLine"
                    android:minLines="3"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/hint_text"
                    android:gravity="top"
                    android:lineSpacingMultiplier="1.263"
                    tools:text="Be yourself; everyone else is already taken." />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAuthor"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Author"
                app:boxStrokeColor="@color/tab_capsule"
                app:hintTextColor="@color/hint_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textCapWords|textPersonName"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/hint_text"
                    tools:text="Oscar Wilde" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTags"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Tags (optional)"
                app:boxStrokeColor="@color/tab_capsule"
                app:hintTextColor="@color/hint_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/hint_text"
                    tools:text="motivation, self" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNotes"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Notes (optional)"
                app:boxStrokeColor="@color/tab_capsule"
                app:hintTextColor="@color/hint_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textCapSentences|textMultiLine"
                    android:minLines="3"
                    android:gravity="top"
                    android:lineSpacingMultiplier="1.263"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/hint_text"
                    tools:text="Remember to share this during the meeting." />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
